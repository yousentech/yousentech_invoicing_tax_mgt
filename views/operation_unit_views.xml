<?xml version="1.0" encoding="UTF-8"?>
<odoo>
      

    <!-- =================== Operation Unit Master =================== -->
    <record id="view_operation_unit_tree" model="ir.ui.view">
        <field name="name">operation.unit.tree</field>
        <field name="model">operation.unit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="company_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_operation_unit_form" model="ir.ui.view">
        <field name="name">operation.unit.form</field>
        <field name="model">operation.unit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id"/>

                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

       <record id="action_operating_unit_view" model="ir.actions.act_window">
            <field name="name">Operating Units</field>
            <field name="res_model">operation.unit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_operation_unit_tree"/>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Click to create new OU
                </p>
            </field>
          </record>


 
     <menuitem id="operating_unit_menu" name="Operating Units" parent="base.menu_users"
                  action="action_operating_unit_view" />
</odoo>
