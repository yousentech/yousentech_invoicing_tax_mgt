<?xml version="1.0" encoding="UTF-8"?>
<odoo>
     
    <!-- =================== Sale Order =================== -->
    <record id="view_sale_order_form_ou" model="ir.ui.view">
        <field name="name">sale.order.form.ou</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="operation_unit_id" force_save="1"  readonly="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
            </xpath>
        </field>
    </record>

    <!-- =================== Purchase Order =================== -->
    <record id="view_purchase_order_form_ou" model="ir.ui.view">
        <field name="name">purchase.order.form.ou</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="operation_unit_id" force_save="1"   readonly="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
            </xpath>
        </field>
    </record>

    <!-- =================== Stock Picking =================== -->
    <record id="view_stock_picking_form_ou" model="ir.ui.view">
        <field name="name">stock.picking.form.ou</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="operation_unit_id"  force_save="1"  readonly="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
            </xpath>
        </field>
    </record>

    <!-- =================== Account Move (Invoices / Bills) =================== -->
    <record id="view_account_move_form_ou" model="ir.ui.view">
        <field name="name">account.move.form.ou</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
             
                <xpath expr = "//group[@id = 'header_left_group']" position="inside">
                    <field name="operation_unit_id" force_save="1"  readonly="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                </xpath>

                  
                <xpath expr = "//field[@name = 'invoice_line_ids']/tree/field[@name = 'account_id']" position="after">
                       <field name="operation_unit_id" force_save="1" optional="hide" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" />
 			    </xpath>
                <xpath expr = "//field[@name = 'line_ids']/tree/field[@name = 'account_id']" position="after">
                     <field name="operation_unit_id" force_save="1" optional="hide" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}" />
                </xpath>


        </field>
    </record>

      <!-- ===================view_account_payment_register_form   =================== -->
    <record id="view_account_payment_register_form_ou" model="ir.ui.view">
        <field name="name">view_account_payment_register_form_ou</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
             
                <xpath expr = "//field[@name = 'communication']" position="after">
                    <field name="operation_unit_id"  force_save="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                </xpath>
 

        </field>
    </record>

 
    <!-- =================== Account Payment =================== -->
    <record id="view_account_payment_form_ou" model="ir.ui.view">
        <field name="name">account.payment.form.ou</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="before">
                <field name="operation_unit_id" force_save="1"  readonly="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
            </xpath>
        </field>
    </record>
 
</odoo>
