<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_users_form_ou" model="ir.ui.view">
        <field name="name">res.users.form.ou</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <notebook>
                <page string="Operation Unit Settings" name="ou_user_setting">
                     
                        <field name="ou_config_ids">
                            <tree string="OU Defaults" editable="bottom">
                             
                                <field name="domain_company_id" column_invisible='1'></field>
                                <field name="company_id" domain='domain_company_id'></field>
                                <field name="allowed_ou_ids" widget="many2many_tags"
                                    options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"></field>
                                <field name="default_ou_id"
                                    options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"></field>
                               

                            </tree>
                        </field>
                   
                  
                </page>
            </notebook>
        </field>
    </record>
</odoo>
