<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="inherit_account_move_line_tax_required" model="ir.ui.view">
            <field name="name">account.move.line.tax.required</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">

                    <field name="journal_id" position="after">
                        <field name="disallow_modify_product_tax_in_invoice"  />

                    </field>

                    <xpath expr = "//field[@name = 'invoice_line_ids']/tree/field[@name = 'tax_ids']" position="attributes">
                        <attribute name="readonly">[('parent.disallow_modify_product_tax_in_invoice', '=', True),('parent.move_type','in', ['out_invoice','out_refund'])]</attribute>
                    </xpath>

                    <xpath expr = "//field[@name = 'invoice_line_ids']/tree/field[@name = 'discount']" position="after">
                         <field name = "l_tax_reqiured" invisible="1"/>
                    </xpath>
                    <xpath expr = "//field[@name = 'invoice_line_ids']/tree/field[@name = 'tax_ids']" position="attributes">
                        <attribute name="required">[('l_tax_reqiured', '=', True),('parent.move_type','in', ['out_invoice','out_refund'])]</attribute>
                    </xpath>



            </field>
        </record>

 
</odoo>
